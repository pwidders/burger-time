<div class="container">
    <div class="jumbotron">
        <center>
            <h1>
                Burger-Time
            </h1>
            <img src="Burger_King_Angus_Bacon_&_Cheese_Steak_Burger.jpg" id="angus">
            <h3>
                We line em' up and you put em' down!
            </h3>
            <br>
            <p>
                Add a Burger order below
            </p>
            <hr>
            <form class="addBurger">
                <div class="form-group">
                    <input type="text" id="addBurger" name="burger" placeholder="Enter burger here">
                    <button type="submit" class="btn btn-success" id="addBurger-button"><span class="fa fa-check"></span></button>
                </div>
            </form>
    </div>

    <div class="row">
        <!-- Burgers ready to eat -->
        <div class="col-sm-6">
            <div class="card text-white bg-dark mb-3">
                <div class="card-header" id="left-card-header"><strong>Burgers ready to eat</strong></div>
                    <div class="card-body">
                        <ul>
                            {{#each burgers}}
                                {{#unless devoured}}
                                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                    <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
                                    <hr>
                                {{/unless}}
                            {{/each}}
                        </ul>
                    </div>   
            </div>
        </div>

        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="card text-white bg-dark mb-3">
                <div class="card-header" id="right-card-header"><strong>Devoured burgers</strong></div>
                    <div class="card-body">
                        <ul>
                            {{#each burgers}}
                                {{#if devoured}}
                                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                    <button type="button" class="trashburger btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                                    <hr>
                                {{/if}}
                            {{/each}}
                        </ul>
                    </div>   
            </div>
        </div>

    </div><!-- /row -->

</div><!-- /container -->